language: python
python:
  - "3.6"      # current default Python on Travis CI

# command to install dependencies
install: pip install -e .
install: pip install codecov
pip install pytest_cov

# safelist
branches:
  only:
  - main

notifications:
  email:
    recipients:
      - hlarrea@fi.uba.ar
    on_failure: always

# Run the unit test
script:
  - pytest -p pytest_cov --cov

after_success:
  - bash <(curl -s https://codecov.io/bash)
